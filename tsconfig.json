{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@backend/*": ["./backend/src/*"]
    }
  },
  "include": ["electron/**/*", "backend/**/*"],
  "exclude": ["node_modules", "dist*", "frontend"]
}
